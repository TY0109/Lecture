<% provide(:title, "投稿一覧") %>

<div class="row">
  <div class="col-md-11 col-md-offset-0.5">
    <div class="main posts-index">
      <div class="container">
        <div class="search">
          <p>大学名で検索(※大学の文字まで入力）</p>
          <div class="search-form">
            <%= search_form_for @search, url:posts_path do |f| %>
              <%=f.text_field :university_eq %>
              <%= f.submit %>
            <% end %>
          </div>
          <p>学部名で検索（※学部の文字まで入力）</p>
          <div class="search-form">
            <%= search_form_for @search, url:posts_path do |f| %>
              <%=f.text_field :department_eq %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>
        <% @posts.each do |post| %>
          <div class="posts-index-item">
            <div class="post-user-name">
              <%= link_to post.user.name, user_path(post.user.id) %>
            </div>
            <div class="post-lecture-info">
              <%= post.university %>
              <%= post.department %>
              <%= post.branch %><br>
              <%= link_to post.title, post_path(post.id) %><br>
              <%= post.description %>
              <!--写真の表示-->
              <% if post.img.present? %>
                <div class="img-area" %>
                  <%= image_tag post.img.url %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
