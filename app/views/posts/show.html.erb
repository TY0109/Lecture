<% provide(:title, '@post.title') %>

<h1>授業の詳細</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered" id="post-table">
      <tbody>
       <tr>
        <th class="active col-md-2">ID</th>
        <td class="col-md-10"><%=@post.id %></td>
       </tr>
       <tr>
         <th class="active">授業名</th></th>
         <td><%=@post.title %></td>
       </tr>
       <tr>
         <th class="active">詳細</th>
         <td>
           <%= auto_link(safe_join(@post.description.split("\n"),tag(:br))) %>
         </td>
       </tr> 
       <tr>
         <th class="active">作成日</th>
         <td><%=l(@post.created_at,format: :long)%></td>
       </tr>
       <tr>
         <th class="active">更新日</th>
         <td><%=l(@post.updated_at, format: :long) %></td>
       </tr> 
      </tbody>
     </table>
     <div class="btn-wrapper">
      <%=link_to "編集",edit_user_post_path,class:"btn btn-lg btn-success" %>
      <%=link_to "削除",user_post_path, method: :delete, data:{confirm:"「#{@post.title}」を削除します。よろしいですか？"},class:"btn btn-lg btn-danger" %>
     </div>
     
    </div>
  </div>
</div>