<% provide(:title,"New Post") %>

<h1>タスク新規作成</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    
    <%= form_with(model:@post, url:user_posts_path(@user) ,local: true) do |f| %>
      <%= render  'shared/error_messages',object:f.object%>
     
      <%= f.label:title , class: "label-form" %>
      <%= f.text_field :title, class: "form-control" %>
      <%= f.label :description, class: "label-form" %>
      <%= f.text_area :description, rows:10, class: "form-control" %>

      

      <%= f.submit "新規登録", class: "btn btn-primary btn-lg btn-form" %>
    <% end %>
    
  </div>
</div>