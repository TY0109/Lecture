<header class="navbar navbar-fixed-top navbar-default" id="header">
  <div class="container">
    <%=link_to "unipass", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%=link_to "トップ", root_path, class:"header-list" %></li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%=link_to "利用者一覧", users_path, class:"header-list" %></li>
          <% end %>
          
          <% unless current_user.admin? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle header-list" data-toggle="dropdown" id="dropdown-title">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">ユーザー</li>
              <li><%=link_to "マイページ", current_user %></li>
              <li><%=link_to "設定", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li><%=link_to "ログアウト", logout_path %></li>
            </ul>
          </li>
          <% else %>
            <li><%=link_to "ログアウト", logout_path,  class:"header-list"  %></li>
          <% end %>
        <% else %>
          <li><%=link_to "ログイン", login_path, class:"header-list" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>